<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#02105E"
        tools:context=".Config">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="271dp"
            android:layout_height="179dp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <RadioButton
                android:id="@+id/radioButtonFacil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allan_bold"
                android:text="@string/RadioFacil"
                android:textColor="#F6F4F4"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonMedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allan_bold"
                android:text="@string/RadioMedio"
                android:textColor="#F6F4F4"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButtonDificil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/allan_bold"
                android:text="@string/RadioDificil"
                android:textColor="#F6F4F4"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/allan_bold"
            android:text="@string/salvar"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allan_bold"
            android:text="@string/configurar"
            android:textColor="#F6F4F4"
            android:textSize="44sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/allan_bold"
            android:text="@string/dificuldade"
            android:textColor="#F6F4F4"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.22"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textViewSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allan_bold"
            android:text="@string/sair"
            android:textColor="#F6F4F4"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonConfirmar" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>